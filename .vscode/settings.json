{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 3000,
    "python.languageServer": "Pylance",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "[python]": {
        "editor.rulers": [
            {
                "column": 88,
                "color": "#764462"
            }
        ]
    },

    "workbench.colorCustomizations": {},
    "triggerTaskOnSave.tasks": {
        "prereload": ["*.py"],
        "restart": true
    },
    "triggerTaskOnSave.resultIndicator": "statusBar.background",
    "triggerTaskOnSave.failureColour": "#ff0000",
    "triggerTaskOnSave.successColour": "#00ff00",
    "blender.addon.reloadOnSave": false,
    "blender.addon.logLevel": "info",
    "blender.addon.buildTaskName": "prereload",
    "blender.addon.justMyCode": true,
    "blender.addon.sourceDirectory": "./mosplat_blender"
}
