{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["${workspaceFolder}/scripts/build.py", "--cuda"],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "build development",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["${workspaceFolder}/scripts/build.py", "--dev", "--cuda"],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "prereload",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["${workspaceFolder}/scripts/prereload.py"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "clear": true
            }
        }
    ]
}
