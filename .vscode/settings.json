{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 3000,
    "python.languageServer": "Pylance",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "[python]": {
        "editor.rulers": [
            {
                "column": 88,
                "color": "#764462"
            }
        ]
    },
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "cmd": "${workspaceFolder}/.venv/Scripts/python.exe ${workspaceFolder}/scripts/prereload.py",
                "autoShowOutputPanel": "error",
                "match": ".*\\.py$"
            }
        ],
        "autoClearConsole": true
    },
    "blender.addon.reloadOnSave": false,
    "blender.addon.logLevel": "info",
    "blender.addon.buildTaskName": "prereload",
    "blender.addon.justMyCode": true,
    "blender.addon.sourceDirectory": "./mosplat_blender"
}
