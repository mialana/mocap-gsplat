{
    "files.autoSave": "off",
    "python.languageServer": "Pylance",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "[python]": {
        "editor.rulers": [
            {
                "column": 88,
                "color": "#764462"
            }
        ]
    },
    "blender.addon.reloadOnSave": true,
    "blender.addon.logLevel": "info",
    "blender.addon.buildTaskName": "build"
}
